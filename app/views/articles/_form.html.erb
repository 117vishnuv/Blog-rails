
<%= form_with model: @article, local: true do |form| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    
  </p>
  <%= form.label :Category %> <br>
    <%= form.select :category_id, Category.all.map {|c|[c.category, c.id]} %>
 
  <p>
    <%= form.label :text  %><br>
    <%= form.rich_text_area :text ,:class =>"bg-white"%>
  </p>
   
 
  <p>
     <%= form.submit  :class => "btn  btn-primary " %>
     <%= link_to 'Back', articles_path,{:class => 'pull-right mt-1' ,:style => 'color:#000000;'}%>
     <i class="fa fa-arrow-left pull-right mt-2"></i>  
  </p>

  
 
<% end %>


