<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>

<body class="hold-transition register-page  ">
<div class="col-sm-6  mx-auto ">
<div class="register-box ">
  <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <h2>Log in</h2>
        </div>
    <div class="card-body text-center">
      <p class="login-box-msg"></p>
       <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "text-center") do |f| %>
        <div class="input-group mb-3 w-80 ">
          <%# <%= f.label :email , :class => "form-control  "%>
          <%# <br /> %> 
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control ", :placeholder =>"Enter e-mail" %>
          <div class="input-group-append ">
              <div class="input-group-text ">
                <i class="fa fa-envelope "></i>
              </div>
           </div>    
        </div>
    

        <div class="input-group mb-3 w-80">
          <%# <%= f.label :password , :class => "form-control "%> 
          <%# <% if @minimum_password_length %> 
          <%# <p> <em>(<%= @minimum_password_length %> 
          <%# characters minimum)</em></p> %> 
          <%# <% end %>
          <%# <br /> %> 
          <%= f.password_field :password, autocomplete: "current-password" , :class => "form-control", :placeholder =>"Enter password"%>
          <div class="input-group-append">
            <div class="input-group-text">
              <i class="fa fa-lock" style='font-size:24px'></i>
            </div>
          </div>       
        </div>

          <% if devise_mapping.rememberable? %>
          <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
          </div>
          <%end%>
  

        <div class="col-md-4-center bg-light ">
         <%= f.submit "Log in", :class => "btn btn-block btn-success " %>
    
        </div>
          <% end %>

        <div class="col text-center">
          <%= render "devise/shared/links" %>
         </div>


     </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->
</div>

<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>





















